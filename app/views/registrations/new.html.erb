<% content_for :panel do %>
    <h5>Nu behöver du fylla i formuläret för <%= @registration.group.name %></h5>
    <p></p>
<% end %>

<% content_for :notice do %>
    <%= notice %>
<% end %>

<% content_for :breadcrumbs do %>
   <li><%=link_to @registration.group.season.organization.name, @registration.group.season.organization  %></li>
    <li><%=link_to @registration.group.season.name, @registration.group.season%></li>
    <li><%=link_to @registration.group.name, @registration.group.season%></li>
<% end %>

<h1>Ny registrering</h1>

<%= render 'form' %>

<script type="text/javascript">
$(document).ready(function() {
$('#regcountdown').countdown({until: new Date(Date.UTC(<%= @rt.javascript_version %>)), serverSync: serverTime, expiryText: 'Reservationstiden för registreringen har gått ut. Du är inte längre garanterad en plats men kan få den i fall det finns oreserverade platser kvar i gruppen när du trycker Spara.'});
});
</script>
